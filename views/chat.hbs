<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Chat</title>
    <style>
       body {
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #1e3c72, #2a5298, #ff9a9e, #fad0c4, #fad0c4, #ffdde1);
  background-size: 600% 600%;
  animation: gradientBG 12s ease infinite;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #fff;
  text-align: center;
  
}

@keyframes gradientBG {
  0% { background-position: 0% 50%; }
  25% { background-position: 50% 100%; }
  50% { background-position: 100% 50%; }
  75% { background-position: 50% 0%; }
  100% { background-position: 0% 50%; }
}

p {
  font-size: 18px;
  font-weight: 300;
  margin-bottom: 25px;
}

        h1 {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 40px;
            font-weight: bold;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 2px;
            background: linear-gradient(45deg, #ffdde1, #1e3c72);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        h2{
            color: #000;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
        }

        .modal-content {
    background-color: #fefefe;
    text-align: center;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 400px;
    border-radius: 5px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    position: absolute;
    left: 50%;
    top: 35%;
    transform: translate(-50%, -50%);
}
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        .modal-header {
            padding-bottom: 10px;
            border-bottom: 1px solid #ccc;
        }

        .modal-body {
            padding: 10px 0;
        }

        .modal-footer {
            padding-top: 10px;
            text-align: right;
        }

        .input-group {
            margin-bottom: 10px;
        }

        .input-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .input-group input {
            width: 100%;
            padding: 10px;
            border: 2px solid #158ffe; 
            border-radius: 5px; 
            background-color: #f2f2f2; 
            box-sizing: border-box;
            transition: border-color 0.3s;
            outline: none;
        }

        .input-group input:focus {
            border-color: #8ab7e0;
        }

        .button-group {
            text-align: center;
        }

        .button-group button {
           display: inline-block;
  padding: 15px 35px;
  border: none;
  background: linear-gradient(45deg, #ff416c, #ff4b2b, #1e3c72);
  color: #fff;
  text-decoration: none;
  border-radius: 50px;
  font-weight: bold;
  font-size: 18px;
  transition: 0.3s;
  box-shadow: 0 5px 15px rgba(255, 75, 43, 0.5);
  cursor: pointer;
        }

        .button-group button:hover {
         transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(255, 75, 43, 0.7);
        }

        

        #container {
            position: relative;
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            margin-top: 10px;
            padding-bottom: 60px;
        }

        #messages {
            list-style-type: none;
            padding: 0;
            margin: 0;
            max-height: calc(100vh - 160px);
            overflow-y: auto;
            border-bottom: 1px solid #ccc;
        }

        .message {
            margin-bottom: 10px;
            padding: 10px;
            background-color: #f9f9f9;
            border-radius: 8px;
        }

        .message .message-content {
            display: flex;
            flex-direction: column;
        }

        .message.sender {
            background-color: #e6e5eb;
            color: #000;
            align-self: flex-end;
        }

        .message.receiver {
            background-color: #e6e5eb;
        }

        .message .username {
            font-weight: bold;
            color: #158ffe;
            margin-bottom: 5px;
        }

        form {
            position: fixed;
            bottom: 0;
            width: 100%;
              background: linear-gradient(135deg, #1e3c72, #2a5298, #ff9a9e, #fad0c4, #fad0c4, #ffdde1);
            padding: 6px;
            box-sizing: border-box;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        form input {
            flex: 1;
            border: 0;
            padding: 6px;
            margin-right: 10px;
            border-radius: 5px;
        }

        form button {
            width: 20%;
            background: #158ffe;
            color: #fff;
            border: none;
            padding: 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

        form button:hover {
            background: #8ab7e0;
        }
        .back-button {
    position: absolute;
    top: 0.7%;
    left: 2%; 
    text-decoration: none;
}

.back-button img {
    width: 45px;
    height: 45px;
    margin-right: 5px;
    vertical-align: middle;
}

.back-button img:hover{
    background: #158ffe;
  color: #fff;
  font-weight: bold;
  transition: background-color 0.3s, transform 0.3s;
  transform: scale(1.1);
}

        @media (max-width: 600px) {
            form {
                padding: 5px;
            }

            form button {
                padding: 8px;
            }
        }

        @media (max-width: 600px) {
    .modal-content {
        width: 90%;
        max-width: none;
        
    }
}
    </style>
</head>
<body>
    <h1>Secret Chat</h1>
     <a href="/" class="back-button">
        <img src="https://i.postimg.cc/Ghw7c3bx/back-button-white.png" alt="Go Back">
        </a>
    <div class="modal" id="usernameModal">
        <div class="modal-content">

                <span class="close" onclick="closeModal()">&times;</span>
                <h2 style="text-align: center;">Enter Your Username</h2>
            <div class="modal-body">
                <div class="input-group">
                    <input type="text" id="usernameInput">
                </div>
            </div>
            <div class="modal-footer">
                <div class="button-group">
                    <button onclick="submitUsername()">Submit</button>
                </div>
            </div>
        </div>
    </div>
    <div id="container">
        <ul id="messages"></ul>
    </div>
    <form id="form" style="display:none;">
        <input id="input" autocomplete="off" placeholder="Type your message here" style="padding: 12px; border: 1px solid #ccc; border-radius: 5px; width: 70%;">
        <button style="background: #158ffe; color: #fff; border: none; padding: 12px; border-radius: 5px; cursor: pointer;">Send</button>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();

        var form = document.getElementById('form');
        var input = document.getElementById('input');
        var messagesList = document.getElementById('messages');
        var modal = document.getElementById('usernameModal');

        function openModal() {
            modal.style.display = 'block';
        }

        function closeModal() {
            modal.style.display = 'none';
        }

        function submitUsername() {
            var username = document.getElementById('usernameInput').value;
            if (username) {
                socket.emit('login', username);
                form.style.display = 'flex';
                closeModal();
            }
        }

        form.addEventListener('submit', function (e) {
            e.preventDefault();
            if (input.value) {
                socket.emit('chat message', input.value);
                input.value = '';
            }
        });

        socket.on('chat message', function (data) {
            displayMessage(data.username, data.message);
        });

        function displayMessage(username, message) {
            var item = document.createElement('li');
            var messageContent = document.createElement('div');
            var usernameDiv = document.createElement('div');
            var messageText = document.createElement('div');

            usernameDiv.textContent = username + "";
            usernameDiv.classList.add('username');

            messageText.textContent = message;

            messageContent.appendChild(usernameDiv);
            messageContent.appendChild(messageText);
            item.appendChild(messageContent);

            item.classList.add('message');
            if (username === socket.username) {
                item.classList.add('sender');
            } else {
                item.classList.add('receiver');
            }
            messagesList.appendChild(item);
            messagesList.scrollTop = messagesList.scrollHeight;
        }

        window.addEventListener('beforeunload', function (e) {
            e.preventDefault();
            e.returnValue = '';
        });

        openModal();
    </script>
</body>
</html>